{% block stylesheets %}

<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>
.form {
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 8rem;
  margin-bottom: 5rem;
  background-color: #f6f8f8;
  padding: 25px;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
  border-radius: 6px;
}

.form h2 {
  margin: 10px 0;
  font-weight: 500;
  text-align: center;
  text-transform: uppercase;
}

.error-message {
  color: red;
  font-size: 16px;
}

.logged-in-message {
  color: green;
  font-size: 16px;
}

.input-field {
  padding: 8px;
  border: 1px solid #999;
  margin-top: 4px;
  outline: 0;
  width: 100%;
}

.input-field:focus {
  border: 1px solid rgb(255, 207, 119);
}

.submit {
  margin-top: 30px;
    background-color: rgba(255, 136, 0, 0.719);
    border: 1px solid rgb(145, 205, 255);
    cursor: pointer;
    color: white;
    padding: 0.2rem;
    text-transform: uppercase;
    font-size: 18px;
    font-weight: 600;
    width: 450px;
}


</style>
{% endblock %}

{% block body %}
<div class="form">
    <h2>Inscription</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <label for="{{ registrationForm.firstName.vars.id }}">Nom</label>
        {{ form_widget(registrationForm.firstName, { 'attr': {'class': 'input-field'} }) }}

        <label for="{{ registrationForm.lastName.vars.id }}">Prénom</label>
        {{ form_widget(registrationForm.lastName, { 'attr': {'class': 'input-field'} }) }}

        <label for="{{ registrationForm.email.vars.id }}">Email</label>
        {{ form_widget(registrationForm.email, { 'attr': {'class': 'input-field'} }) }}

        <label for="{{ registrationForm.plainPassword.vars.id }}">Password</label>
        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'input-field'}, 'label': 'Password' }) }}
            <br/><br/>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="submit">S'insrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
