{% extends 'base.html.twig' %}

{% block title %}Liste des Commandes
{% endblock %}

{% block body %}
	<div class="container">
		<h4>Liste des commandes</h4>
		<br><br>
		<table class="table">
			<thead>
				<tr>
					<th>ID de la commande</th>
					<th>Adresse</th>
					<th>Ville</th>
					<th>Téléphone</th>
					<th>Date</th>
					<th>Détails</th>
				</tr>
			</thead>
			<tbody>
				{% for commande in commandes %}
					<tr style="align-items: center;">
						<td>C00{{ commande.id }}</td>
						<td>{{ commande.adresse }}</td>
						<td>{{ commande.city.name }}</td>
						<td>{{ commande.phone }}</td>
						<td>{{ commande.createdAt|date('d/m/Y H:i') }}</td>
						<td>
							<a href="{{ path('admin_commande_detail', {'id': commande.id}) }}" class="btn btn-info">Voir</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
