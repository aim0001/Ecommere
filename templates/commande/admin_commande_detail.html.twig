{% extends 'base.html.twig' %}

{% block title %}Détails de la commande{% endblock %}

{% block body %}
    <div class="container">
        <h2>Détails de la commande</h2>
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">ID de la commande</th>
                            <td>{{ commande.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom complet</th>
                            <td>{{ commande.firstName }} {{ commande.lastName }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Adresse</th>
                            <td>{{ commande.adresse }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Ville</th>
                            <td>{{ commande.city.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Téléphone</th>
                            <td>{{ commande.phone }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de création</th>
                            <td>{{ commande.createdAt|date('d/m/Y H:i') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <h3>Produits commandés</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in commande %}
                    <tr>
                        <td>{{ item.products.name }}</td>
                        <td>{{ item.products.price }}</td>
                        <td>{{ item.products.quantity }}</td> {# You may need to adjust this if quantity is available in your model #}
                        <td>{{ item.product.price }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_commande_list') }}" class="btn btn-secondary">Retour à la liste des commandes</a>
    </div>
{% endblock %}
