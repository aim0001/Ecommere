{% extends 'base.html.twig' %}

{% block title %}Commande Info
{% endblock %}

{% block body %}
	<div class="container">
		<div class="" style="text-align : start; display : flex; gap : 3rem">
			<div class="col-8">
				<br>
				<h4 style="margin-left : 5rem">Vérification</h4>
				{# <br>
				                {{ form_start(form, { action: path('app_commande_prepare') }) }}
				                {{ form_widget(form) }}
				                <br>
				                <input type="submit" value="continuer" class="btn btn-outline-primary">
				                {{ form_end(form) }} #}
				<div>
					<label>Phone</label>
					<input type="tel" name="phone" class="form form-control" id="phone" onkeyup="calcul()"/>
					<label>Ville</label>
					<select name="city" class="form form-control" id="commande_city" onchange="calcul()">
						{% for item in city %}
							<option value="{{ item.id }}#{{ item.shippingCost }}">{{ item.name }}</option>
						{% endfor %}
					</select>
					<label>Adresse</label>
					<input type="text" name="adresse" class="form form-control" id="adress" onkeyup="calcul()">
				</div>
				<br>
				<div class="text-center">
					<span id="kkia"></span>
				</div>
			</div>
			<div class="col-4">
				<br><br><br><br>
				<span>Montant à payer:<br><br></span>
				<h4 style="color : rgba(255, 136, 0, 0.719)">
					<span id="card-price">{{ total }}</span>
					FCFA
				</h4><br><br>
				<span>Frais de livraison<br><br></span>
				<h4>
					<span id="shippingCost"></span>
					FCFA
				</h4><br><br>
				<span>Montant total à payer<br><br></span>
				<h2 style="color : #3498db">
					<span class="total-price" id="paymount"></span>
					FCFA
				</h2>
			</div>
		</div>
	</div>
	<br><br><br><br>
	<script src="https://cdn.kkiapay.me/k.js"></script>
	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

	<script>
		$(document).ready(function () {
const citySelector = $('#commande_city');
const cityValue = citySelector.val().split("#")[0];
const url = `http://127.0.0.1:8000/city/${cityValue}/shipping/cost/`;

function ajaxRequest(url) {
$.ajax({
url: url,
type: 'GET',
success: function (response) {
const newResponse = JSON.parse(response);
if (parseInt(newResponse.status) === 200) {
$("#shippingCost").text(newResponse.content);
const cardPrice = parseInt($("#card-price").text());
const shippingCost = parseInt($("#shippingCost").text());
$('.total-price').text(cardPrice + shippingCost);
}
},
error: function (xhr, status, error) {}
});
}

ajaxRequest(url);

citySelector.on('change', function () {
const urlUpdate = `http://127.0.0.1:8000/city/${
$(this).val()
}/shipping/cost/`;
ajaxRequest(urlUpdate);
});
});
	</script>

	<script>

		function calcul() {
var adress = document.getElementById("adress").value;
var phone = document.getElementById("phone").value;
var commande_city = document.getElementById("commande_city").value;
var city = commande_city.split("#")[0]
var paymount = Number(commande_city.split("#")[1]) + Number({{ total }})
var data = [adress, phone, city];
console.log(data)
if (phone && city && adress) {
document.getElementById('kkia').innerHTML = `<kkiapay-widget 
					sandbox="true"
                    amount = "${paymount}"
                    name="{{user.lastName}}"
                    email="{{user.Email}}"
                    key="30a3f5f0316e11efb3f2d358b3ba43e1" 
                    position="center"
                    data="${data}"
                    callback="http://127.0.0.1:8000/commande/verify">
                </kkiapay-widget>`
}
}
	</script>


{% endblock %}
