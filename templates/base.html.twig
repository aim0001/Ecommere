<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.0/dist/cdn.min.js"></script>
        {% block stylesheets %}
        {% endblock %}

        
        
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <header>
    <section class="contain_head">
            <section class="contain_nav">
                <div class="title">
                    
                        <span class="B">B</span>
                        <span class="E">E</span>
                        <span class="L">L</span>
                        <span class="b">b</span>
                        <span class="o">o</span>
                        <span class="i">i</span>
                        <span class="s">s</span>
                    
                </div>
                <!--menu hamburger -->
                <div class="menu-icon">&#9776;</div>

                <div >
                    <nav>
                    <!-- "show" pour activer le menu hamburger -->
                        <ul class="menu">
                            {% for item in menuItems %}
                                <li>
                                    <a href="{{ path(item.route) }}" class="{{item.class}}">{{item.label}}</a>
                                </li>
                                
                            {% endfor %}
                            {% if is_granted("ROLE_ADMIN") %}
                                <div class="dropdown">
                                    <span class="dropbtn" onclick="OpenCloseMenu(this)">
                                        <li>
                                            <span class="menu_Admin active">Admin</span>
                                        </li>
                                    </span>
                                    <div class="dropdown-content">
                                        <div class="Sous-ensemble-item-menuH">
                                            <a href="{{ path('app_category_index') }}" class="item-menuH">Catégories</a>
                                            <a href="{{ path('app_category_new') }}" class="item-menuH">Ajouter une catégorie</a>
                                        </div>
                                        <div class="Sous-ensemble-item-menuH">
                                            <a href="{{ path('app_product_index') }}" class="item-menuH">Produits</a>
                                        </div>
                                        <div class="Sous-ensemble-item-menuH">
                                            <a href="{{ path('app_sub_category_index') }}" class="item-menuH">Sous catégories</a>
                                            <a href="{{ path('app_sub_category_new') }}" class="item-menuH">Créer une sous catégorie</a>
                                        </div>
                                        <div class="Sous-ensemble-item-menuH">
                                            <span><a href="{{ path('app_user_index') }}" class="item-menuH">Utilisateurs</a></span>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            <li>
                                <button class="button1">Contactez</button>
                            </li>
                        </ul>    
                    </nav>

                </div>
                
                <li class="account">
                    <p class="toggle-account-menu">Mon compte</p>
                    {% if app.user == false %}
                        
                            <div class="account-menu">
                                <ul>
                                    <li><a href="{{ path('app_register') }}">S'inscrire</a></li>
                                    <li><a href="{{ path('app_login') }}" class="logout-link">Se connecter</a></li>
                                </ul>
                            </div>
                    {% else %}
                        <div class="account-menu">
                            <ul>
                                <li><a href="#">Profil</a></li>
                                <li><a href="{{ path('app_login') }}">se connecté</a></li>
                                <li><a href="{{ path('app_logout') }}">se déconnecté</a></li>
                            </ul>
                        </div>
                    {% endif %}
                    
                </li>

            </section>
        </section>
    </header>
        {% if categories is defined %}
            <ul class="liste_categorie">
                {% for category in categories %}
                    <li class="item_categorie">
                        <a href="" class="lien_categorie">{{ category.name }} &#x25BE;</a>
                        <ul class="sous_categories">
                            {% for subcategory in category.subCategories %}
                                <li class="item_subCategorie">
                                    <a href="{{ path('app_home_product_filter',{'id':subcategory.id}) }}" class="lien_subCategorie">{{ subcategory.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        {% block body %}
        <div id="loading-indicator" style="display: none;">
            <div class="spinner"></div>
        </div>

        
        {% endblock %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuIcon = document.querySelector('.menu-icon');
            const menu = document.querySelector('.menu');

            menuIcon.addEventListener('click', function() {
                menu.classList.toggle('show');
            });
        });

        function OpenCloseMenu(clickedElement) {
            var menuItem = clickedElement.nextElementSibling;

            if (menuItem.style.display === 'block') {
                menuItem.style.display = 'none';
            } else {
                menuItem.style.display = 'block';
            }
            
        }



        // Button pour la connection


        function toggleAccountMenu() {
            const accountToggle = document.querySelector('.toggle-account-menu');
            const accountMenu = document.querySelector('.account-menu');

            accountToggle.addEventListener('click', function() {
                accountMenu.classList.toggle('active');
            });

            // Fermer le menu lorsque l'utilisateur clique en dehors du menu
            window.addEventListener('click', function(event) {
                if (!accountToggle.contains(event.target) && !accountMenu.contains(event.target)) {
                    accountMenu.classList.remove('active');
                }
            });

            // Empêcher la propagation du clic à partir du menu lui-même
            accountMenu.addEventListener('click', function(event) {
                event.stopPropagation();
            });
        }

        // Appeler la fonction pour gérer le menu Account à chaque chargement de page
        document.addEventListener('DOMContentLoaded', function() {
            toggleAccountMenu();
        });




        document.addEventListener('DOMContentLoaded', function() {
            const logoutLink = document.querySelector('a.logout-link');
            if (logoutLink) {
                logoutLink.addEventListener('click', function() {
                    localStorage.removeItem('productStates');
                });
            }
        });




    </script>
</html>
