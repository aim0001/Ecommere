{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<main class="Block">
    <span class="retour">
        <a href="{{ path('app_product_index') }}"class="lien-retour">&#8592; Retour</a>
    </span>
    <br/>
    <h4>Produit</h4>
    <br>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="descript">{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>
    <br/>
    <div class="Block-btn-show">
        <div class="block-btn-edit">
            <a href="{{ path('app_product_edit', {'id': product.id}) }}"class="btn-edit">Modifier</a>
        </div>
        {{ include('product/_delete_form.html.twig') }}
    </div>
    
</main>
{% endblock %}
