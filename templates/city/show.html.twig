{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
<main class="Block">
    

    <br>
    <h4>Ville de <h6>{{ city.name }}</h6></h4>
    <br>
    <div class="Block-btn-show">
        <span>
            <a href="{{ path('app_city_index') }}"class="lien-retour">&#8592; Retour</a>
        </span>
        
        <a href="{{ path('app_city_edit', {'id': city.id}) }}"class="btn-edit">Modifier</a>
    </div>
    <br>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>ShippingCost</th>
                <td>{{ city.shippingCost }}</td>
            </tr>
        </tbody>
    </table>
    <br><br>
    {{ include('city/_delete_form.html.twig') }}
</main>

{% endblock %}
